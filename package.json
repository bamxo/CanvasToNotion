{
  "name": "canvastonotion",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:extension": "vite build && cp public/manifest.json dist/ && cp public/vite.svg dist/",
    "build:extension:dev": "VITE_APP_ENV=development vite build --mode development && cp public/manifest.json dist/ && cp public/vite.svg dist/",
    "build:extension:prod": "VITE_APP_ENV=production vite build --mode production && cp public/manifest.json dist/ && cp public/vite.svg dist/",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "test:watch": "vitest --coverage",
    "test:ui": "vitest --ui --coverage",
    "test:popup": "vitest run src/popup/**/*.{test,spec}.{ts,tsx} --coverage",
    "test:content": "vitest run src/content/**/*.{test,spec}.{ts,tsx} --coverage",
    "test:background": "vitest run src/background/**/*.{test,spec}.{ts,tsx} --coverage",
    "test:services": "vitest run src/services/**/*.{test,spec}.{ts,tsx} --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:coverage": "vitest run --coverage && open coverage/index.html",
    "test:e2e": "tsx e2e/run-tests.ts",
    "test:e2e:watch": "tsx e2e/run-tests.ts -- --watch",
    "test:e2e:ui": "tsx e2e/run-tests.ts -- --ui",
    "test:e2e:signup": "tsx e2e/run-tests.ts -- --suite Signup",
    "test:e2e:login": "tsx e2e/run-tests.ts -- --suite Login",
    "test:e2e:notion": "tsx e2e/run-tests.ts -- --suite \"Notion Connection\"",
    "test:e2e:pages": "tsx e2e/run-tests.ts -- --suite \"Page Selection\"",
    "test:e2e:assignments": "tsx e2e/run-tests.ts -- --suite \"Unsynced Assignments\"",
    "test:e2e:sync": "tsx e2e/run-tests.ts -- --suite Syncing"
  },
  "dependencies": {
    "@firebase/auth": "^1.10.6",
    "@notionhq/client": "^2.3.0",
    "axios": "^1.8.4",
    "firebase": "^11.6.1",
    "idb": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/chrome": "^0.0.313",
    "@types/node": "^22.14.0",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "diff-sequences": "^29.6.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^24.0.0",
    "puppeteer": "^24.10.0",
    "puppeteer-core": "^24.10.0",
    "tsx": "^4.20.0",
    "vite": "^6.2.5",
    "vitest": "^3.1.4"
  }
}
