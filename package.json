{
  "name": "canvastonotion",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:extension": "vite build && cp public/manifest.json dist/ && cp public/vite.svg dist/",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "test:watch": "vitest --coverage",
    "test:ui": "vitest --ui --coverage",
    "test:popup": "vitest run src/popup/**/*.test.{ts,tsx} --coverage",
    "test:content": "vitest run src/content/**/*.test.{ts,tsx} --coverage",
    "test:background": "vitest run src/background/**/*.test.{ts,tsx} --coverage"
  },
  "dependencies": {
    "@notionhq/client": "^2.3.0",
    "axios": "^1.8.4",
    "firebase": "^11.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/chrome": "^0.0.313",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^24.0.0",
    "vite": "^6.2.5",
    "vitest": "^3.1.1"
  }
}
