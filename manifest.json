{
  "manifest_version": 3,
  "name": "Canvas to Notion",
  "version": "1.0.0",
  "description": "Sync Canvas assignments to Notion",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "http://localhost:5173/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/*"],
      "js": ["src/content/content.js"],
      "run_at": "document_start"
    }
  ],
  "externally_connectable": {
    "matches": ["http://localhost:5173/*"]
  }
} 